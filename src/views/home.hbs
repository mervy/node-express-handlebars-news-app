{{> header }}

{{!-- Centered Hero --}}
<div class="px-4 py-5 my-5 text-center">
    <i class="bi bi-wrench-adjustable" style="font-size: 5rem; color: cornflowerblue;"></i>
    <h1 class="display-5 fw-bold text-body-emphasis">System Master for New Projects</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most
            popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system,
            extensive
            prebuilt components, and powerful JavaScript plugins.</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <button type="button" class="btn btn-primary btn-lg px-4 gap-3">Primary button</button>
            <button type="button" class="btn btn-outline-secondary btn-lg px-4">Secondary</button>
        </div>
    </div>
</div>

<div class="container my-5">
    <h1 class="mb-4">Criar Nova Categoria</h1>
    {{#if successMessage}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{successMessage}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    {{#if errorMessage}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{errorMessage}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    <form action="/categories" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Nome:</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Descrição:</label>
            <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
        </div>
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="isActive" name="isActive">
            <label class="form-check-label" for="isActive">Ativo</label>
        </div>
        <button type="submit" class="btn btn-primary">Criar Categoria</button>
    </form>
</div>

<article class="container">
    <h2>Categorias</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Categoria</th>
                <th scope="col">Description</th>
                <th scope="col">Ativa?</th>
            </tr>
        </thead>
        <tbody>
            {{#each cats}}
            <tr>
                <td>{{ _id }}</td>
                <td>{{ name }}</td>
                <td>{{ description }}</td>
                <td>{{ isActive }}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</article>

{{> footer }}